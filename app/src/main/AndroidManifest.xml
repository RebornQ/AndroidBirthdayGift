<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="soft.weac.birthdaygift">

    <application
        android:name="soft.weac.birthdaygift.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_cake"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_cake_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CakeActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".RefuseGiftActivity"
            android:theme="@style/NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MyLauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="soft.weac.birthdaygift.service.AudioService" />
    </application>

</manifest>